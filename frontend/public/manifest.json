{
  "short_name": "React App",
  "manifest_version": 3,
  "name": "Headline Changer",
  "version": "1.0",
  "description": "Change headlines on Indian newspaper sites.",
  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.indiannewssite.com/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}